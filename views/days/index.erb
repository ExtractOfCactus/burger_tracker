<h2>Deals by day</h2>

<% @days.each() do |day| %>
<section id="day-view">
<div id="section-title">
<h3><%= day.day() %></h3>
</div>
  <% unless day.deals() == [] %>
  <ul>
    <% day.deals().each() do |deal| %>
    <div id="details">
      <li><a href="../deals/<%=deal.id()%>"><%= deal.title() %></a> at <a href="../restaurants/<%=deal.restaurant().id()%>"><%= deal.restaurant().name() %></a></li>
    </div>
    <% end %>
  </ul>
  <% else %>
  <p id="no-deal">Sorry, no deals today</p>
  <% end %>
</section>
<% end %>
