<h2>Deals</h2>

<% @deals.each do |deal| %>
  <h3><%= deal.title() %></h3>
  <p>Restaurant: <%= deal.restaurant().name() %></p>
  <% deal.days().each() do |day| %>
  <p>Day of deal: <%= day.day() %></p>
  <p>Applicable to:
    <ul>
      <% deal.burgers().each() do |burger| %>
      <li><%= burger.name() %></li>
      <% end %>
    </ul>
  <% end %>
  
  <hr>
<% end %>