<h2>Daily Deals</h2>

<section id="day-view">
  <div id="section-title" >
  <p id="what-day">Today is <%= @weekday.day() %></p>
  <% unless @weekday.deals() == [] %>
  <p>Here are your deals for today:</p>
  </div>
  <ul>
    <% @weekday.deals().each() do |deal| %>
    <div id="details">
      <% unless deal.restaurant() == nil %>
        <li><a href="deals/<%=deal.id%>"><%= deal.title() %></a> at <a href="restaurants/<%=deal.restaurant().id()%>"><%= deal.restaurant().name() %></a></li>
      <% end %>
    </div>
    <% end %>
  </ul>
  <% else %> 
  <p>No deals today!</p>
  <% end %>
</section>
